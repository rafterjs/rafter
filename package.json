{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap --npm-client=yarn",
    "start:example:app": "cd examples/simple-app && yarn start",
    "start:example:app:watch": "yarn watch \"yarn start:example:app\"",
    "start:example:api": "cd examples/simple-api && yarn start",
    "start:example:api:watch": "yarn watch \"yarn start:example:api\" -i \"**/*steps*\" -i \"**/*node_modules*\" -i \"**/*spec*\" -i \"**/dist\"",
    "start:example:lambda": "cd examples/simple-lambda && yarn start",
    "start:example:lambda:watch": "yarn watch \"yarn start:example:lambda\" -i \"**/*steps*\" -i \"**/*node_modules*\" -i \"**/*spec*\" -i \"**/dist\"",
    "watch": "node ./core/watcher/dist/index.js",
    "clean": "lerna clean -y",
    "clean:lib": "lerna run clean:lib",
    "build": "lerna run build",
    "build:package": "lerna run build --stream --scope",
    "build:watcher": "yarn build:package @rafterjs/watcher",
    "build:example:app": "cd examples/simple-app && yarn build",
    "build:example:api": "cd examples/simple-api && yarn build",
    "build:example:lambda": "cd examples/simple-lambda && yarn build",
    "build:api": "cd core/api && yarn build",
    "build:babel": "cd core/babel-preset-rafter && yarn build",
    "build:cors": "cd plugins/rafter-cors-plugin && yarn build",
    "build:di-autoloader": "cd core/di-autoloader && yarn build",
    "build:lambda": "cd core/lambda && yarn build",
    "build:logger": "cd plugins/rafter-logger-plugin && yarn build",
    "build:rafter": "cd core/rafter && yarn build",
    "build:test": "cd core/test && yarn build",
    "build:types": "lerna run build:types",
    "build:utils": "cd core/utils && yarn build",
    "build:mongo": "cd plugins/rafter-mongodb-plugin && yarn build",
    "format": "yarn prettier && yarn lint:fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "lint:babel-preset-rafter": "cd core/babel-preset-rafter && yarn lint",
    "lint:core": "cd core/rafter && yarn lint",
    "lint:rafter-cors-plugin": "cd plugins/rafter-cors-plugin && yarn lint",
    "lint:boilerplate": "cd examples/boilerplate && yarn lint",
    "lint:di-autoloader": "cd core/di-autoloader && yarn lint",
    "lint:eslint-config": "cd core/eslint-config && yarn lint",
    "lint:mongo": "cd plugins/rafter-mongodb-plugin && yarn lint -- --fix",
    "test:di-autoloader": "cd core/di-autoloader && yarn test",
    "test:rafter": "cd core/rafter && yarn test",
    "test:rafter-api": "cd core/api && yarn test",
    "test:utils": "cd core/utils && yarn test",
    "test": "lerna run test",
    "update:latest": "yarn upgrade --latest",
    "update:all": "lerna run update:latest",
    "graph": "lerna-dependency-graph",
    "lerna:version": "lerna version --yes --conventional-commits --message 'chore(release): publish [skip ci]'",
    "lerna:publish": "lerna publish --no-verify-access --yes from-package",
    "cz": "git-cz",
    "cz:retry": "git-cz --retry"
  },
  "dependencies": {
    "dot-prop": "6.0.1",
    "is-class": "0.0.9",
    "lerna-dependency-graph": "1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.5",
    "@babel/core": "7.14.6",
    "@babel/eslint-parser": "7.14.7",
    "@babel/node": "7.14.7",
    "@types/express": "4.17.12",
    "@types/express-serve-static-core": "4.17.24",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.170",
    "@types/node": "14.17.4",
    "@types/nodemon": "1.19.0",
    "@types/sinon": "10.0.2",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "axios": "0.21.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "27.0.6",
    "commitizen": "4.2.4",
    "commitlint": "12.1.4",
    "copyfiles": "2.4.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.30.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "nodemon": "2.0.9",
    "prettier": "2.3.2",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.3",
    "ts-node": "9.1.1",
    "ts-sinon": "2.0.1",
    "typescript": "4.3.5"
  },
  "resolutions": {
    "@types/express-serve-static-core": "4.17.24"
  },
  "engines": {
    "node": ">=14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}

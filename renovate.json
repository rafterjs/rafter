{
  "extends": ["config:base"],
  "schedule": ["every weekend"],
  "rebaseWhen": "auto",
  "rebaseLabel": "rebase",
  "semanticCommits": true,
  "requiredStatusChecks": [],
  "ignoreDeps": [
    "@rafterjs"
  ],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["@types"],
      "groupName": "types"
    },
    {
      "packagePatterns": ["@rafterjs"],
      "automerge": false
    }
  ]
}
